<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@+id/home_frag">

    <fragment
        android:id="@+id/home_frag"
        android:name="com.sample.vkoelassign.home.view.HomeFragment"
        android:label="@string/txt_x_list"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_postDetail"
            app:destination="@id/postDetail_frag"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_comment"
            app:destination="@id/comment_frag"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/myfeed_frag"
        android:name="com.sample.vkoelassign.home.view.MyFeedFragment"
        android:label="@string/txt_my_feed"
        tools:layout="@layout/fragment_my_feed" />

    <fragment
        android:id="@+id/search_frag"
        android:name="com.sample.vkoelassign.home.view.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/addPost_frag"
        android:name="com.sample.vkoelassign.home.view.AddNewPostFragment"
        android:label="@string/title_add_post"
        tools:layout="@layout/fragment_add_new_post" />

    <fragment
        android:id="@+id/postDetail_frag"
        android:name="com.sample.vkoelassign.home.view.PostDetailFragment"
        android:label="@string/title_post_detail"
        tools:layout="@layout/fragment_post_detail">
        <argument
            android:name="Post"
            android:defaultValue="@null"
            app:argType="com.sample.vkoelassign.data.network.Post"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/comment_frag"
        android:name="com.sample.vkoelassign.home.view.CommentsFragment"
        android:label="@string/title_comment"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="Post"
            android:defaultValue="@null"
            app:argType="com.sample.vkoelassign.data.network.Post"
            app:nullable="true" />
    </fragment>

</navigation>